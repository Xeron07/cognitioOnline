<script>
    var modal;
    var info=$("#info");
    var carry=$("#carry");
    var historyi=$("#history");
    var previous;
    $(document).ready(function(){
        modal = new Custombox.modal({
                content: {
                effect: 'superscaled',
                target: '#imagePreview'
              }
            });
        info.show();
        carry.hide();
        historyi.hide();
        previous=info;
        historySearch();
        carrySearch();
    });
    
    $("#navInfo").click(function()
    {
        previous.slideUp();
        info.slideDown();   
        previous=info;
    });
    $("#navCarry").click(function()
    {
        previous.slideUp();
        carry.slideDown();   
        previous=carry;
    });
    $("#navHistory").click(function()
    {
        previous.slideUp();
        historyi.slideDown();   
        previous=historyi;
    });


    function nameChange()
    {
          var name=prompt("Enter your name");
          if(name!=null)
          {
               location.replace("/nameChange/"+name);
          }
    }
    function passChange(){
                     Swal.mixin({
  input: 'text',
  confirmButtonText: 'Next &rarr;',
  showCancelButton: true,
  progressSteps: ['1', '2']
}).queue([
  {
    title: 'Changing Password',
    text: 'Type Your New Password'
  },
  {
    title: 'Changing Password',
    text: 'Re-Type New Password'
  }
  
]).then((result) => {
  if (result.value) {
    if((result.value[0]===result.value[1])&&result.value[0]!==""){
        Swal.fire({
  title: 'Are you sure?',
  text: "Your password will be change!",
  type: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, change it!'
}).then((result2) => {
  if (result2.value) {
    location.replace("/passChange/"+result.value[0]);
  }
  else{
    Swal.fire({
  type: 'warning',
  title: 'Oops...',
  text: 'Password not changed',
});
  }
});
  }
  else{
           Swal.fire({
  type: 'error',
  title: 'Oops...',
  text: 'Password not matched',
});
        }

    
  }
})

    }
   
function openImagePreview(){
   // Open
   modal.open();
}
function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#preview')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
 function historySearch(){
  $("#history").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#historyBody tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
}

function carrySearch(){
  $("#carryData").on("keyup", function() {
      console.log("no");
    var value = $(this).val().toLowerCase();
    $("#carryBody tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
}
</script>    
