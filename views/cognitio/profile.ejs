<script>
    var modal;
    var info=$("#info");
    var carry=$("#carry");
    var historyi=$("#history");
    var previous;
    $(document).ready(function(){
        modal = new Custombox.modal({
                content: {
                effect: 'superscaled',
                target: '#imagePreview'
              }
            });
        info.show();
        carry.hide();
        historyi.hide();
        previous=info;
    });
    
    $("#navInfo").click(function()
    {
        previous.slideUp();
        info.slideDown();   
        previous=info;
    });
    $("#navCarry").click(function()
    {
        previous.slideUp();
        carry.slideDown();   
        previous=carry;
    });
    $("#navHistory").click(function()
    {
        previous.slideUp();
        historyi.slideDown();   
        previous=historyi;
    });
   
function openImagePreview(){
   // Open
